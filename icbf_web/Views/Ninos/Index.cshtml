@model IEnumerable<icbf_web.Models.Nino>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <!-- Agregar un formulario o enlace para filtrar por jardín -->
    <form asp-action="IndexPorJardin" method="get">
        <label for="jardinId">Filtrar por Jardín:</label>
        
        <select name="idJardin" id="jardinId" class="form-control" asp-items="ViewBag.Jardines">
            <option value="">Seleccione un jardín</option>
        </select>
        <button type="submit" class="btn btn-primary">Filtrar</button>
    </form>
</p>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nuip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreNino)
            </th>
            <th>
              Jardín
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonoNino)
            </th>     
            <th>
                @Html.DisplayNameFor(model => model.DireccionNino)
            </th>
         
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nuip)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreNino)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Jardin.NombreJardin)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.TelefonoNino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionNino)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNino">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdNino">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNino">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
